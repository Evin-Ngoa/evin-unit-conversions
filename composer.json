{
    "name": "evin-ngoa/evin-unit-conversions",
    "description": "This is a simple unit conversion php package",
    "keywords": [
        "Evin-Ngoa",
        "evin-unit-conversions"
    ],
    "homepage": "https://github.com/evin-ngoa/evin-unit-conversions",
    "license": "MIT",
    "authors": [{
        "name": "Evingtone Mwailongo",
        "email": "evingtone.ngoa@gmail.com",
        "role": "Developer"
    }],
    "require": {
        "php": "^7.0"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.0",
        "phpunit/phpunit": "^9.5",
        "spatie/ray": "^1.28",
        "vimeo/psalm": "^4.8"
    },
    "autoload": {
        "psr-4": {
            "EvinNgoa\\EvinUnitConversions\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "EvinNgoa\\EvinUnitConversions\\Tests\\": "tests"
        }
    },
    "scripts": {
        "psalm": "vendor/bin/psalm",
        "test": "vendor/bin/phpunit",
        "test-coverage": "vendor/bin/phpunit --coverage-html coverage",
        "format": "vendor/bin/php-cs-fixer fix --allow-risky=yes"
    },
    "config": {
        "sort-packages": true
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}